<%- include("partials/header.ejs") %>

<body>
    <div class="search">
        <form id="search" method="post">
            <input type="text" id="cityName" name="city" placeholder="Search for city" required>
            <button type="submit" class="btn btn-outline-primary">Search</button>
        </form>
    </div>
    
    <div class="container-1">
        <div class="weather-main">
            <div class="current-weather fade-in">
                <div>
                    <h1><%= data.cityName %></h1>
                    <h2><%= data.current_temp %>°C</h2> 
                    <h5>Wind: <%= data.wind %> kph</h5>                   
                </div>
                <div class="condition">
                    <img src="<%= data.mainIcon.replace('/64x64/', '/128x128/') %>">
                    <h4><%= data.current_cond %></h4>
                </div>
            </div>
            <div class="todayForecast">
                <h2>Todays Forecast</h2>
                <div class="cardsDiv">
                    <div class="cards fade-in">
                        <p>12:00 am</p>
                        <img src="<%= data.tempForecast.icon0 %>">
                        <p><%= data.tempForecast.hour0 %> °C</p>
                    </div>
                    <div class="cards fade-in">
                        <p>06:00 am</p>
                        <img src="<%= data.tempForecast.icon6 %>">
                        <p><%= data.tempForecast.hour6 %> °C</p>
                    </div>
                    <div class="cards fade-in">
                        <p>12:00 pm</p>
                        <img src="<%= data.tempForecast.icon12 %>">
                        <p><%= data.tempForecast.hour12 %> °C</p>
                    </div>
                    <div class="cards fade-in">
                        <p>06:00 pm</p>
                        <img src="<%= data.tempForecast.icon18 %>">
                        <p><%= data.tempForecast.hour18 %> °C</p>
                    </div>
                </div>
            </div>
            <div class="other-details">
                <ul>
                    <li>
                        <h3>Real Feel</h3>
                        <h4 class="fade-in"><%= data.otherdetails.realfeel %> °C</h4>
                    </li>
                    <li>
                        <h3>UV Index</h3>
                        <h4 class="fade-in"><%= data.otherdetails.uvIndex %></h4>
                    </li>
                    <li>
                        <h3>Humidity</h3>
                        <h4 class="fade-in"><%= data.otherdetails.humidity %>%</h4>
                    </li>
                    <li>
                        <h3>Sunrise</h3>
                        <h4 class="fade-in"><%= data.otherdetails.sunrise %></h4>
                    </li>
                    <li>
                        <h3>Sunset</h3>
                        <h4 class="fade-in"><%= data.otherdetails.sunset %></h4>
                    </li>
                    <li>
                        <h3>Temperature</h3>
                        <h4 class="fade-in"><%= data.otherdetails.maxTemp %>°C / <%= data.otherdetails.minTemp %>°C</h4>
                    </li>
                </ul>
            </div>
        </div>
        <div class="sevenDayForecast">
            <h2>3 Day Forecast</h2>
            <ul>
                <% for (i=0; i<3 ; i ++) { %>
                <li class="fade-in">
                    <p><%= data.sevenDayForecast.weekdayOut[i] %></p>
                    <img src="<%= data.sevenDayForecast.forecastIcons[i] %>">
                    <p><%= data.sevenDayForecast.forecastCond[i] %></p>
                    <p><%= data.sevenDayForecast.sevenMaxTemp[i] %>/<%= data.sevenDayForecast.sevenMinTemp[i] %></p>
                </li>
                <% } %>
            </ul>
        </div>
    </div>
    <%- include("partials/footer.ejs") %>
    Powered by <a href="https://www.weatherapi.com/" title="Free Weather API">WeatherAPI.com</a>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>